{
  "manifest_version": 3,
  "name": "MarketPulseAI",
  "description": "Hello World scaffold for MarketPulseAI browser extension.",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html",
    "default_title": "MarketPulseAI"
  },
  "background": {
    "service_worker": "navigator.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tsetmc.com/*"],
      "js": ["toast.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["tabs"],
  "host_permissions": ["https://*.tsetmc.com/*"]
}
